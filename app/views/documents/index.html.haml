= content_for :title, "Documents"

.panel.panel-default
  .panel-heading
    .row
      .col-md-2
        %label Documente
      =link_to new_document_path, class: "btn btn-default" do
        Neues Document hochladen

  .panel-body
  %table.table
    %thead
      %tr
        %th Name
        %th File
        %th
        %th
        %th

    %tbody#documents
      - @documents.each do |document|
        %tr
          %td= document.name
          %td= document.file
          %td= link_to 'Show', document
          %td= link_to 'Edit', edit_document_path(document)
          %td= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'New Document', new_document_path
